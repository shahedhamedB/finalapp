<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circleback"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:elevation="100dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/h1"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعاون"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/adobearabic"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:elevation="20dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/white"
        android:elevation="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أدخل رقم هاتفك لإنشاء حساب جديد أو تسجيل الدخول"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/adobearabic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="10dp"
        android:background="@drawable/sq1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/jf"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+962"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="9"
            android:inputType="phone"
            android:maxLength="9"
            android:hint="7 9521 9876"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonToNextPage1"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="استمرار"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:fontFamily="@font/adobearabic"
        android:background="@drawable/sq1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/gray"
        android:enabled="false"/>

</LinearLayout>